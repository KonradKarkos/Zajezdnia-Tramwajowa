@model Zajezdnia_Tramwajowa.Przystanek

@{
    ViewBag.Title = "Usun przystanek";
}

<h2>Usun przystanek</h2>

<h3>Jesteś pewien, że chcesz usunąć ten przystanek?</h3>
<div>
    <h4>Przystanek</h4>
    <h5 style="color: red">@ViewBag.Exception</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nazwa przystanku")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NazwaPrzystanku)
        </dd>

        <dt>
            @Html.DisplayName("Nazwa trasy")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trasa.NazwaTrasy)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Powrót do trasy", "Details", new { id = Model.IDTrasy })
        </div>
    }
</div>
