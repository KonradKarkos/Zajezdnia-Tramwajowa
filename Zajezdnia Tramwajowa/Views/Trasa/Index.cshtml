@model IEnumerable<Zajezdnia_Tramwajowa.Trasa>

@{
    ViewBag.Title = "Trasa";
}

<h2>Lista Tras</h2>

<p>
    @Html.ActionLink("Utwórz nową", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nazwa Trasy")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NazwaTrasy)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.IDTrasy }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.IDTrasy }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.IDTrasy })
        </td>
    </tr>
}

</table>
