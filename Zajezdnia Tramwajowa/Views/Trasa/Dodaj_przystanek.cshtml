@model Zajezdnia_Tramwajowa.Przystanek
@{
    ViewBag.Title = "Dodaj przystanek";
}
<h2>Dodaj Przystanek</h2>
<div>
    <h4>Motorniczy</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayName("ID Trasy")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trasa.IDTrasy)
        </dd>

        <dt>
            @Html.DisplayName("Nazwa trasy")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trasa.NazwaTrasy)
        </dd>

    </dl>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Przystanek</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model=>model.IDTrasy)

        <div class="form-group">
            @Html.LabelFor(model => model.NazwaPrzystanku,"Nazwa przystanku", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NazwaPrzystanku, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NazwaPrzystanku, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do trasy", "Details", new { id = Model.Trasa.IDTrasy })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
