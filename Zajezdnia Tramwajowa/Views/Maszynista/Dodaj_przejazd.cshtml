@model Przejazd
@{
    ViewBag.Title = "Dodaj przejazd";
}

<h2>Dodaj Przejazd</h2>
<div>
    <h4>Motorniczy</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayName("ID Motorniczego")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Maszynista.IDMaszynisty)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Maszynista.Stawka)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Maszynista.Stawka)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Maszynista.Imie)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Maszynista.Imie)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Maszynista.Nazwisko)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Maszynista.Nazwisko)
        </dd>

    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h5 style="color: red">@ViewBag.Exception</h5>

    <div class="form-horizontal">
        <h4>Przejazd</h4>
        
        @Html.HiddenFor(model => model.IDMaszynisty)
        <div class="form-group">
            @Html.LabelFor(model => model.IDTramwaju, "IDTramwaju", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IDTramwaju, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IDTramwaju, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDTrasy, "IDTrasy", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IDTrasy, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IDTrasy, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CzasOdjazdu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CzasOdjazdu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CzasOdjazdu, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>

</div>
@Html.ActionLink("Powrót do spisu przejazdów", "Details", new { id=Model.IDMaszynisty})
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
