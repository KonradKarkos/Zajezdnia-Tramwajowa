@model IEnumerable<Zajezdnia_Tramwajowa.Przejazd>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CzasOdjazdu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDPrzejazdu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDTramwaju)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tramwaj.ModelPojazdu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trasa.NazwaTrasy)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CzasOdjazdu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDPrzejazdu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDTramwaju)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tramwaj.ModelPojazdu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trasa.NazwaTrasy)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.IDPrzejazdu }) |
                @Html.ActionLink("Usuń", "Usun_przejazd", new { id = item.IDPrzejazdu, m = item })
            </td>
        </tr>
        }
    }

</table>