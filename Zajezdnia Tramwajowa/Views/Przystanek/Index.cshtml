@model IEnumerable<Zajezdnia_Tramwajowa.Przystanek>

@{
    ViewBag.Title = "Przystanki";
}

<h2>Lista Przystanków</h2>

<p>
    @Html.ActionLink("Stwórz nowy", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nazwa przystanku")
        </th>
        <th>
            @Html.DisplayName("Nazwa trasy")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NazwaPrzystanku)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trasa.NazwaTrasy)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.IDPrzystanku }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.IDPrzystanku }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.IDPrzystanku })
        </td>
    </tr>
}

</table>
