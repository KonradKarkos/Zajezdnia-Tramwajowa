@model Zajezdnia_Tramwajowa.Przystanek

@{
    ViewBag.Title = "Stwórz nowy";
}

<h2>Stwórz nowy</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h5 style="color: red">@ViewBag.Exception</h5>

    <div class="form-horizontal">
        <h4>Przystanek</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IDTrasy, "IDTrasy", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDTrasy", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDTrasy, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NazwaPrzystanku, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NazwaPrzystanku, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NazwaPrzystanku, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Stwórz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do listy przystanków", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
