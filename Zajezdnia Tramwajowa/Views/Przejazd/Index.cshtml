@model IEnumerable<Zajezdnia_Tramwajowa.Przejazd>

@{
    ViewBag.Title = "Przejazdy";
}

<h2>Lista Przejazdów</h2>

<p>
    @Html.ActionLink("Dodaj nowy", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Czas odjazdu")
        </th>
        <th>
            @Html.DisplayName("Imię motorniczego")
        </th>
        <th>
            @Html.DisplayName("Model pojazdu")
        </th>
        <th>
            @Html.DisplayName("Nazwa trasy")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CzasOdjazdu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Maszynista.Imie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tramwaj.ModelPojazdu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trasa.NazwaTrasy)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.IDPrzejazdu }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.IDPrzejazdu }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.IDPrzejazdu })
        </td>
    </tr>
}

</table>
